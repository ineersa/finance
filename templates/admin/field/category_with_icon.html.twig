{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext
 # @var field \EasyCorp\Bundle\EasyAdminBundle\Dto\FieldDto
 # @var entity \EasyCorp\Bundle\EasyAdminBundle\Dto\EntityDto
 #}
{% if field.value %}
    {% set category = entity.instance.category %}
    <span class="d-flex align-items-center">
        {% if category.icon %}
            <i class="{{ category.icon }}" style="margin-right: 8px; width: 16px;"></i>
        {% endif %}
        <a href="{{ ea_url().setController('App\\Controller\\Admin\\CategoryCrudController').setAction('detail').setEntityId(category.id) }}">{{ category.name }}</a>
    </span>
{% else %}
    <span class="text-muted">No category</span>
{% endif %}
